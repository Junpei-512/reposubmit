<div class="main submits-new">
  <div class="container">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/submits/#{@submit.id}/update") do %>
      <div class="form">
        <div class="form-body">
          <% @submit.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <textarea name="content"><%= @submit.content %></textarea>
          <input type="submit" value="保存">
        </div>
      </div>
    <% end %>
  </div>
</div>